@model medicare_pvt.Models.Doctor

@{
    ViewData["Title"] = "Edit Doctor";
}

<div class="container mt-4">
    <h2>Edit Doctor</h2>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Specialty" class="form-label"></label>
            <input asp-for="Specialty" class="form-control" required />
            <span asp-validation-for="Specialty" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Availability" class="form-label"></label>
            <input asp-for="Availability" class="form-control" />
            <span asp-validation-for="Availability" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>
