@model medicare_pvt.Models.Appointment
@{
    ViewData["Title"] = "Update Appointment";
}
<div class="container mt-4">
    <h2>Update Appointment with @Model.Patient?.Name</h2>
    <form asp-action="EditAppointment" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">Date/Time</label>
            <input value="@Model.AppointmentDate.ToString("yyyy-MM-dd HH:mm")" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-select">
                <option>Confirmed</option>
                <option>Cancelled</option>
                <option>Done</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" rows="3" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Appointments" asp-route-id="@Model.DoctorId" class="btn btn-secondary">Back to List</a>
    </form>
</div>
