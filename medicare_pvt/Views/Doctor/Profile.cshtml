@model medicare_pvt.Models.Doctor
@{
    ViewData["Title"] = "Doctor Profile";
}

<div class="container py-4">
    <div class="row">
        <!-- Doctor Profile Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfileImage))
                        {
                            <img src="@Model.ProfileImage" alt="@Model.Name" class="rounded-circle" width="150" height="150">
                        }
                        else
                        {
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                                 style="width: 150px; height: 150px; font-size: 3rem;">
                                @Model.Name.Substring(0, 1)
                            </div>
                        }
                    </div>
                    <h3 class="mb-1">@Model.Name</h3>
                    <p class="text-muted mb-2">@Model.Specialty</p>
                    <p class="text-muted mb-3">
                        <i class="fas fa-map-marker-alt"></i> @Model.Location
                    </p>
                    
                    @if (ViewBag.AverageRating != null)
                    {
                        <div class="mb-3">
                            <span class="text-warning">
                                @for (int i = 0; i < (int)ViewBag.AverageRating; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @for (int i = (int)ViewBag.AverageRating; i < 5; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            </span>
                            <span class="text-muted">(@ViewBag.AverageRating?.ToString("F1"))</span>
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <a asp-controller="Appointment" asp-action="Book" asp-route-doctorId="@Model.Id" 
                           class="btn btn-primary btn-lg">
                            <i class="fas fa-calendar-plus"></i> Book Appointment
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h5 class="mb-3"><i class="fas fa-info-circle"></i> Information</h5>
                    <p class="mb-2">
                        <strong><i class="fas fa-certificate text-primary"></i> Qualifications:</strong><br />
                        @Model.Qualifications
                    </p>
                    <p class="mb-2">
                        <strong><i class="fas fa-id-card text-primary"></i> License Number:</strong><br />
                        @Model.LicenseNumber
                    </p>
                    <p class="mb-2">
                        <strong><i class="fas fa-briefcase text-primary"></i> Experience:</strong><br />
                        @Model.ExperienceYears years
                    </p>
                    <p class="mb-2">
                        <strong><i class="fas fa-money-bill-wave text-primary"></i> Consultation Fee:</strong><br />
                        LKR @Model.ConsultationFee.ToString("N2")
                    </p>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h5 class="mb-3"><i class="fas fa-clock"></i> Availability</h5>
                    <p>@Html.Raw(Model.Availability?.Replace("\n", "<br />"))</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- About -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="mb-3"><i class="fas fa-user-md"></i> About</h4>
                    <p>@Model.Bio</p>
                </div>
            </div>

            <!-- Patient Reviews -->
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0"><i class="fas fa-star"></i> Patient Reviews 
                        @if (ViewBag.Feedbacks != null)
                        {
                            <span class="badge bg-primary">@((ViewBag.Feedbacks as List<medicare_pvt.Models.Feedback>).Count)</span>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.Feedbacks != null && ((List<medicare_pvt.Models.Feedback>)ViewBag.Feedbacks).Count > 0)
                    {
                        @foreach (var feedback in (List<medicare_pvt.Models.Feedback>)ViewBag.Feedbacks)
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">@feedback.Patient.Name</h6>
                                        <div class="text-warning">
                                            @for (int i = 0; i < feedback.Rating; i++)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            @for (int i = feedback.Rating; i < 5; i++)
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        </div>
                                    </div>
                                    <small class="text-muted">@feedback.CreatedDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                @if (!string.IsNullOrEmpty(feedback.Title))
                                {
                                    <h6>@feedback.Title</h6>
                                }
                                <p class="mb-0">@feedback.Message</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">
                            <i class="fas fa-comments fa-3x mb-3 d-block"></i>
                            No reviews yet. Be the first to leave a review!
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
