@model IEnumerable<medicare_pvt.Models.Patient>
@{
    ViewData["Title"] = "Patients";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Patients List</h2>
        <a class="btn btn-success" asp-action="Create"><i class="bi bi-plus-lg"></i> Add Patient</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Birthdate</th>
                <th>Address</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center">No patients found.</td>
                </tr>
            }
            else
            {
                foreach (var patient in Model)
                {
                    <tr>
                        <td>@patient.Id</td>
                        <td>@patient.Name</td>
                        <td>@patient.Email</td>
                        <td>@patient.Phone</td>
                        <td>@patient.Birthdate?.ToShortDateString()</td>
                        <td>@patient.Address</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="View" asp-route-id="@patient.Id"><i class="bi bi-eye"></i> View</a>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@patient.Id"><i class="bi bi-pencil"></i> Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@patient.Id" onclick="return confirm('Are you sure you want to delete this patient?');"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
