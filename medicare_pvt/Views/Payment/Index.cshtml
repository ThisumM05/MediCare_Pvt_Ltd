@model List<medicare_pvt.Models.Payment>
@{
    ViewData["Title"] = "Payment History";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2"><i class="fas fa-receipt"></i> Payment History</h2>
                    <p class="text-muted">View all your payment transactions</p>
                </div>
                @if (User.IsInRole("Patient"))
                {
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-credit-card"></i> Make Payment
                    </a>
                }
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var payment in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-@(payment.Status == "Completed" ? "success" : "warning") text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><i class="fas fa-hashtag"></i> @payment.TransactionId</span>
                                <span class="badge bg-light text-dark">@payment.Status</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h4 class="mb-3 text-primary">LKR @payment.Amount.ToString("N2")</h4>
                            <p class="mb-2"><strong>Doctor:</strong> Dr. @payment.Appointment.Doctor.Name</p>
                            <p class="mb-2"><strong>Method:</strong> @payment.PaymentMethod</p>
                            @if (!string.IsNullOrEmpty(payment.PaymentGateway))
                            {
                                <p class="mb-2"><strong>Gateway:</strong> @payment.PaymentGateway</p>
                            }
                            <p class="mb-2"><strong>Date:</strong> @payment.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</p>
                            @if (payment.CompletedAt.HasValue)
                            {
                                <p class="mb-0 text-success small">
                                    <i class="fas fa-check-circle"></i> Completed: @payment.CompletedAt.Value.ToString("MMM dd, yyyy hh:mm tt")
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Receipt" asp-route-id="@payment.Id" class="btn btn-sm btn-outline-primary w-100">
                                <i class="fas fa-file-invoice"></i> View Receipt
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-receipt fa-4x text-muted mb-3"></i>
                <h4>No Payment History</h4>
                <p class="text-muted">You haven't made any payments yet.</p>
            </div>
        </div>
    }
</div>
