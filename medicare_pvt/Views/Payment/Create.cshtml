@model medicare_pvt.Models.Payment
@{
    ViewData["Title"] = "Make Payment";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-credit-card"></i> Make Payment</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="AppointmentId" class="form-label">Select Appointment <span class="text-danger">*</span></label>
                            <select asp-for="AppointmentId" class="form-select" id="appointmentSelect" required>
                                <option value="">-- Choose an appointment --</option>
                                @if (ViewBag.PendingAppointments != null)
                                {
                                    @foreach (var appointment in (List<medicare_pvt.Models.Appointment>)ViewBag.PendingAppointments)
                                    {
                                        <option value="@appointment.Id" data-fee="@appointment.Fee" 
                                                selected="@(ViewBag.SelectedAppointment != null && ViewBag.SelectedAppointment.Id == appointment.Id)">
                                            Dr. @appointment.Doctor.Name - @appointment.AppointmentDate.ToString("MMM dd, yyyy") - LKR @appointment.Fee?.ToString("N2")
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="AppointmentId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Amount (LKR) <span class="text-danger">*</span></label>
                            <input asp-for="Amount" type="number" step="0.01" class="form-control" id="amountInput" required readonly />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PaymentMethod" class="form-label">Payment Method <span class="text-danger">*</span></label>
                            <select asp-for="PaymentMethod" class="form-select" required>
                                <option value="">-- Select Method --</option>
                                <option value="Cash">Cash</option>
                                <option value="Card">Credit/Debit Card</option>
                                <option value="Online">Online Banking</option>
                                <option value="Bank Transfer">Bank Transfer</option>
                            </select>
                            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description (Optional)</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Add any additional notes about this payment..."></textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Payment will be processed immediately and a receipt will be generated.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-check"></i> Process Payment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#appointmentSelect').change(function() {
                var selectedOption = $(this).find('option:selected');
                var fee = selectedOption.data('fee');
                if (fee) {
                    $('#amountInput').val(fee);
                }
            });

            // Set initial amount if appointment is pre-selected
            var initialOption = $('#appointmentSelect').find('option:selected');
            if (initialOption.val()) {
                var initialFee = initialOption.data('fee');
                if (initialFee) {
                    $('#amountInput').val(initialFee);
                }
            }
        });
    </script>
}
