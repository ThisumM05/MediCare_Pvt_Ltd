@model IEnumerable<medicare_pvt.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Appointments List</h2>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add Appointment
        </a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Doctor</th>
                <th>Patient</th>
                <th>Date & Time</th>
                <th>Status</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">No appointments found.</td>
                </tr>
            }
            else
            {
                foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Id</td>
                        <td>@appointment.Doctor?.Name</td>
                        <td>@appointment.Patient?.Name</td>
                        <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@appointment.Status</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="View" asp-route-id="@appointment.Id"><i class="bi bi-eye"></i> View</a>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@appointment.Id"><i class="bi bi-pencil"></i> Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@appointment.Id" onclick="return confirm('Are you sure you want to delete this appointment?');"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
