@model medicare_pvt.Models.Appointment

@{
    ViewData["Title"] = "Appointment View";
}

<div class="container mt-4">
    <h2>Appointment Details</h2>
    <dl class="row">
        <dt class="col-sm-4">ID</dt>
        <dd class="col-sm-8">@Model.Id</dd>

        <dt class="col-sm-4">Doctor</dt>
        <dd class="col-sm-8">@Model.Doctor?.Name</dd>

        <dt class="col-sm-4">Patient</dt>
        <dd class="col-sm-8">@Model.Patient?.Name</dd>

        <dt class="col-sm-4">Date & Time</dt>
        <dd class="col-sm-8">@Model.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-4">Status</dt>
        <dd class="col-sm-8">@Model.Status</dd>

        <dt class="col-sm-4">Notes</dt>
        <dd class="col-sm-8">@Model.Notes</dd>
    </dl>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
